                    - [ 'znalazłam telefon', 'znaleziono telefon' ]
                    - [ 'jak jesteś zalogowany, to możesz edytować wpisy', 'jak się jest zalogowanym, można edytować wpisy' ]
            -
                header: 'Bezosobowe użycie 3. os. mnogiej'
                normative: true
